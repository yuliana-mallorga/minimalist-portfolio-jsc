---
import Section from "@/components/sections/Section.astro";
import { skills } from "@cv";
---

<Section title="Total Technical Skills">
  <ul>
    {
      skills.map(({ name, level, keywords}) => (
        <li>
          <h4>{name} <span class="ml">- Level: {level}</span></h4>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: #333;
    padding: 0.1rem 0.5rem;
    margin-left: 1rem;
    margin-bottom: .5rem
    ;
  }

  .ml{
    margin-left: 2px;
  }
</style>