---
import Section from "@/components/sections/Section.astro";
import { languages } from "@cv";
---

<Section title="Languages">
  <ul>
    {
      languages.map(
        ({ language, level }) => {
          return (
            <li>
                <h3>language: <span>{language}</span></h3>
                <h4>Level: <span>{level}</span></h4>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {    
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  span{
    margin-left: 5px;
    font-weight: 300;
    font-size: medium;
  }
</style>
