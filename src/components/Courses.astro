---
import Section from "@/components/sections/Section.astro";
import { courses } from "@cv";
import Computer from "@/icons/Computer.astro";
---

<Section title="Courses">
  <ul>
    {
      courses.map(({ name, url, code, year }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h4>
                    {name}
                    <time>[{year}]</time>
                  </h4>
                </div>
              </header>
              <footer class="buttons">
                {url && (
                  <a
                    class="button-link"
                    href={url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Course
                  </a>
                )}
                {code && (
                  <a
                    class="button-link"
                    href={code}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    GitHub Repo
                  </a>
                )}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  time {
    font-size: 0.9rem;
    font-weight: 400;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 10px;
    display: flex;
    flex-direction: column;
    padding: 15px;
    height: 100%;
  }

  article header {
    flex: 1;
  }
 
  article a {
    color: #111;
    display: inline-flex;
  }

  .button-link {
    background: rgb(238, 236, 236);
    color: black;
    border: 1px solid rgb(23, 22, 23);
    border-radius: 2px;
    padding: 7px;
    cursor: pointer;
    font-size: 0.8rem;
    box-shadow: inset 0 0 0 0 #f5da79;
    -webkit-transition: ease-out 0.4s;
    -moz-transition: ease-out 0.4s;
    transition: ease-out 0.4s;
  }

  .button-link:hover {
    box-shadow: inset 400px 0 0 0 #f5da79;
  }

  @media print {
    .buttons {
      display: none;
    }
  }

</style>
