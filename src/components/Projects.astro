---
import Section from "@/components/sections/Section.astro";
import Button from "@/components/Button.astro";
import Card from "./Card.astro";
import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ name, description, urlCode, demoUrl, highlights, isActive }) => {
          return (
            <Card name={name} isActive={isActive}>
              <div class="space">
                <div>
                  <div class="d-none">
                    {demoUrl !== null || undefined ? (
                      <Button link={demoUrl}>Project demo</Button>
                    ) : null}
                  </div>
                  <p class="descripcion">{description}</p>
                </div>
                <ul class="highlights">
                  {highlights.map((highlight) => {
                    return <li>{highlight}</li>;
                  })}
                </ul>
              </div>
            </Card>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  .space {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .descripcion {
    margin-top: 1rem;
  }

  .highlights {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.7rem;
    justify-content: center;
    max-width: 100%;
    max-height: 100%;
    margin: 0 0;
  }

  .highlights li {
    border-radius: 6px;
    background: #eee;
    color: #333;
    padding: 0.2rem 0.3rem;
  }

  @media print {
    .d-none {
      display: none;
    }
  }
</style>
